# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Redis Configuration for Rate Limiting (Optional - falls back to in-memory if not provided)
REDIS_URL=redis://localhost:6379
# Alternative: Use Upstash Redis for production
# UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Application Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Stripe Configuration (if using payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_CORE=price_your_core_plan_price_id_here
STRIPE_PRICE_ID_RIVOPRO=price_your_premium_plan_price_id_here
STRIPE_REPORT_PRICE_ID=price_your_report_price_id_here

# Security Configuration
RATE_LIMIT_ENABLED=true
FILE_UPLOAD_MAX_SIZE=10485760
SECURITY_AUDIT_ENABLED=true

# Development/Production Environment
NODE_ENV=development 